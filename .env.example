# EnsinaLab Content Engine - Environment Variables
# Copy this file to .env and fill in your actual API keys

# ====================================
# CORE CONFIGURATION
# ====================================
ENVIRONMENT=development  # development, staging, production, premium

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=True

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=ensinalab_content
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis (for Celery)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# JWT
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS (adicionar dom√≠nios frontend)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ====================================
# LLM & AI SERVICES
# ====================================
# OpenAI (required for LangChain/LangGraph)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4

# LangSmith (optional - for tracing/monitoring)
LANGSMITH_API_KEY=lsv2_pt_...
LANGSMITH_TRACING=true
LANGSMITH_PROJECT=ensinalab-content-engine

# ====================================
# VIDEO GENERATION
# ====================================
# Video Generator Selection
VIDEO_GENERATOR_TYPE=simple  # simple, avatar, ai

# Storage
UPLOAD_DIR=/tmp/ensinalab_uploads
VIDEO_OUTPUT_DIR=/tmp/ensinalab_videos
AUDIO_OUTPUT_DIR=/tmp/ensinalab_audio
THUMBNAIL_OUTPUT_DIR=/tmp/ensinalab_thumbnails

# ====================================
# TEXT-TO-SPEECH PROVIDERS
# ====================================
# Google Cloud TTS (recommended for dev - free tier available)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# OR
GOOGLE_CLOUD_API_KEY=AIza...

# ElevenLabs (high quality, pay-as-you-go ~$0.30/1000 chars)
ELEVENLABS_API_KEY=sk_...

# Amazon Polly (AWS credentials - free tier 5M chars/month)
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1

# Azure Speech (pay-as-you-go)
AZURE_SPEECH_KEY=...
AZURE_SPEECH_REGION=eastus

# ====================================
# AVATAR VIDEO PROVIDERS
# ====================================
# HeyGen (virtual presenters - ~$5-10/min)
HEYGEN_API_KEY=...

# D-ID (talking avatars - ~$3-5/min)
DID_API_KEY=...

# ====================================
# AI VIDEO GENERATION PROVIDERS
# ====================================
# Kling AI (text-to-video - ~$30-50/min, experimental)
KLING_API_KEY=...

# Runway Gen-3 (cinematic AI video - ~$50-100/min, experimental)
RUNWAY_API_KEY=...

# ====================================
# CELERY CONFIGURATION
# ====================================
CELERY_BROKER_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}
CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=3600  # 1 hour max per task

# ====================================
# LOGGING & MONITORING
# ====================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
SENTRY_DSN=  # Optional: error tracking

# ====================================
# COST & USAGE LIMITS (optional)
# ====================================
DAILY_BUDGET_LIMIT=100.00  # USD
MAX_COST_PER_VIDEO_SIMPLE=1.00
MAX_COST_PER_VIDEO_AVATAR=15.00
MAX_COST_PER_VIDEO_AI=150.00

# ====================================
# GENERATOR-SPECIFIC SETTINGS
# ====================================
# Simple Generator (TTS + slides)
SIMPLE_GENERATOR_TTS_PROVIDER=google  # google, elevenlabs, amazon, azure
SIMPLE_GENERATOR_VOICE=pt-BR-FranciscaNeural

# Avatar Generator
AVATAR_GENERATOR_PROVIDER=heygen  # heygen, did
AVATAR_GENERATOR_AVATAR_ID=default

# AI Generator
AI_GENERATOR_PROVIDER=kling  # kling, runway
AI_GENERATOR_QUALITY=standard  # standard, high, cinematic
AI_GENERATOR_MAX_SCENES=10

# ====================================
# FEATURE FLAGS
# ====================================
ENABLE_HUMAN_REVIEW=true
ENABLE_AUTO_THUMBNAILS=true
ENABLE_COST_TRACKING=true

